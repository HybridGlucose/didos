NTHREADS="16"
#these must be set before CFLAGS!
CCACHE_DIR="/gentoo/ccache"
CCACHE_RECACHE="yes"
CCACHE_SIZE="0"
CFLAGS="${CFLAGS} -march=native -pipe"
CMAKE_MAKEFILE_GENERATOR=ninja
CPU_FLAGS_X86="avx2 fma3 sse4a"
LIBS="-Wl,-no-as-needed -ljemalloc -Wl,-as-needed"
MAKEOPTS="-j17"
USE="canon_printers_mx920 -pm-utils"
VIDEO_CARDS="nvidia"
EMERGE_DEFAULT_OPTS="${EMERGE_DEFAULT_OPTS} --load-average=${NTHREADS}"
MAKEOPTS="-l${NTHREADS}"
